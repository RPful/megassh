#!/bin/bash

# Definindo cores
AZUL="\033[1;34m"
AMARELO="\033[1;33m"
RESET="\033[0m"

# Função para centralizar o texto
centralizar() {
    local largura_terminal
    largura_terminal=$(tput cols)
    texto=$1
    comprimento_texto=${#texto}
    espacos=$(( (largura_terminal - comprimento_texto) / 2 ))
    printf "%*s%s\n" $espacos "" "$texto"
}

# Centralizando o banner
echo -e "${AZUL}"
centralizar "============================="
centralizar "   MENU ESCOLHA 1 ou 2"
centralizar "============================="
echo -e "${RESET}"

# Centralizando a frase adicional
centralizar "${AMARELO}Compre sua Key no Bot @keysshplusbot${RESET}"
echo ""

# Centralizando as opções
centralizar "${AMARELO}Escolha a instalação desejada:${RESET}"
centralizar "${AMARELO}1 - Instalação para ARM (arm64)${RESET}"
centralizar "${AMARELO}2 - Instalação para x86${RESET}"

# Recebendo a escolha do usuário
read -p "Digite 1 ou 2: " escolha

# Realizando a instalação conforme a escolha
case $escolha in
  1)
    echo -e "${AZUL}Instalação para ARM (arm64) selecionada...${RESET}"
    bash <(wget -qO- https://raw.githubusercontent.com/RPful/megassh/refs/heads/main/sshplusarm64)
    ;;
  2)
    echo -e "${AZUL}Instalação para x86 selecionada...${RESET}"
    bash <(wget -qO- https://bit.ly/sshpro1)
    ;;
  *)
    echo -e "${AMARELO}Opção inválida! Por favor, escolha 1 ou 2.${RESET}"
    ;;
esac
