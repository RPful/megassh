#!/bin/bash

# Definindo cores
AZUL="\033[1;34m"
AMARELO="\033[1;33m"
ROXO="\033[1;35m"  # Cor roxa
RESET="\033[0m"

# Função para centralizar o texto
centralizar() {
    local largura_terminal
    largura_terminal=$(tput cols)  # Obtém a largura do terminal
    texto=$1
    comprimento_texto=${#texto}
    espacos=$(( (largura_terminal - comprimento_texto) / 2 ))  # Calcula o número de espaços antes do texto
    printf "%*s%s\n" $espacos "" "$texto"  # Imprime o texto centralizado
}

# Limpar a tela
clear

# Centralizando o banner
echo -e "${AZUL}"
centralizar "============================="
centralizar "   MENU ESCOLHA"
centralizar "============================="
echo -e "${RESET}"

# Centralizando a frase adicional com a cor roxa
centralizar "${ROXO}Compre sua Key no Bot @keysshplusbot${RESET}"
echo ""

# Centralizando as opções
centralizar "${AMARELO}Escolha a instalação desejada:${RESET}"
centralizar "${AMARELO}1 - Instalação para ARM (arm64)${RESET}"
centralizar "${AMARELO}2 - Instalação para x86${RESET}"
centralizar "${AMARELO}0 - Sair${RESET}"

# Recebendo a escolha do usuário
read -p "Digite 1, 2 ou 0 para sair: " escolha

# Realizando a instalação conforme a escolha
case $escolha in
  1)
    echo -e "${AZUL}Instalação para ARM (arm64) selecionada...${RESET}"
    bash <(wget -qO- https://raw.githubusercontent.com/RPful/megassh/refs/heads/main/sshplusarm64)
    ;;
  2)
    echo -e "${AZUL}Instalação para x86 selecionada...${RESET}"
    bash <(wget -qO- https://bit.ly/sshpro1)
    ;;
  0)
    echo -e "${AZUL}Saindo...${RESET}"
    exit 0
    ;;
  *)
    echo -e "${AMARELO}Opção inválida! Por favor, escolha 1, 2 ou 0.${RESET}"
    ;;
esac
